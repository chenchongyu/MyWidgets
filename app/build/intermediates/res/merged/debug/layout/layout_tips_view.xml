<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/tips_box"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="1dp"
        >
        <ImageView
            android:id="@+id/tips_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tips_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_toRightOf="@+id/tips_icon"
            android:layout_toEndOf="@+id/tips_icon"
            android:paddingLeft="10dp"
            android:visibility="visible"
            tools:text="标题"
            />
        <TextView
            android:id="@+id/tips_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tips_title"
            android:layout_toRightOf="@+id/tips_icon"
            android:layout_toEndOf="@+id/tips_icon"
            android:textColor="@android:color/black"
            android:paddingLeft="10dp"
            android:visibility="visible"
            tools:text="我是内容。。。。。"
            />
    </RelativeLayout>
</FrameLayout>