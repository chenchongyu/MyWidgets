<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_drag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_rect_blue_fill_bg"
        android:padding="10dp"
        android:gravity="center"
        android:text="可拖拽"
        android:onClick="onDragClick"
        />

    <TextView
        android:id="@+id/tv_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/round_rect_blue_fill_bg"
        android:padding="10dp"
        android:gravity="center"
        android:onClick="onViewPagerClick"
        android:text="模仿viewpager"
        />

    <TextView
        android:id="@+id/tv_pin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/round_rect_blue_fill_bg"
        android:padding="10dp"
        android:gravity="center"
        android:onClick="onPinClick"
        android:text="悬停"
        />

    <TextView
        android:id="@+id/tv_animate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/round_rect_blue_fill_bg"
        android:padding="10dp"
        android:gravity="center"
        android:onClick="onAnimateClick"
        android:text="动画"
        />
</LinearLayout>