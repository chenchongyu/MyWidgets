<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="----自定义圆形图片（setXfermode的使用）----"
        android:gravity="center_horizontal"
        android:textSize="15sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="可以自定义图形样式（目前只支持两种圆形和圆角矩形）；可以自定义外圆线的宽度（0dp就是不显示）、颜色;左边为padding=15dp样式；"
        android:textSize="12sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <net.runningcoder.widget.CircleImageView
            android:id="@+id/v_circle"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:src="@drawable/girl"
            app:border_width="1dp"
            app:border_color="@android:color/holo_red_light"
            />
        <net.runningcoder.widget.CircleImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/girl"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
            <net.runningcoder.widget.CircleImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:src="@drawable/lrt"
                android:scaleType="fitCenter"
                app:image_type="round_rect"
                />
            <net.runningcoder.widget.CircleImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/lrt"
                app:image_type="round_rect"
                />
        </LinearLayout>
</LinearLayout>
