<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.runningcoder" >

    <!-- 在SDCard中创建与删除文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 往SDCard写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".RunningCodeApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ExpandTextViewActivity"
            android:exported="false"
            android:label="@string/v_expandable_textview" />
        <activity
            android:name=".activity.TVListActivity"
            android:label="@string/title_activity_tvlist" >
        </activity>
        <activity
            android:name=".activity.TagGroupViewActivity"
            android:label="@string/title_activity_tag" >
        </activity>
        <activity
            android:name=".activity.CircleProgressViewActivity"
            android:label="@string/title_activity_tag" />
        <activity
            android:name=".activity.CircleImageViewActivity"
            android:label="@string/title_activity_tag" />
        <activity
            android:name=".activity.AudioBarActivity"
            android:label="@string/title_activity_tag" />
        <activity
            android:name=".activity.ScratchCardActivity"
            android:label="@string/title_activity_tag" />
        <activity
            android:name=".activity.TipsViewActivity"
            android:label="@string/title_activity_tag" />
    </application>

</manifest>
